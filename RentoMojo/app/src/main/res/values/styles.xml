<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="linearLayoutInHomeFragments">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <!--        <item name="android:paddingBottom">@dimen/dp_12</item>-->
    </style>

    <style name="textViewsInHomeFragments">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">@dimen/dp_5</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <style name="cardViewInHomeFragmentsOuter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/dp_2</item>
    </style>

    <style name="cardViewInFragments">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/dp_3</item>
        <item name="android:layout_weight">1</item>
        <item name="cardCornerRadius">@dimen/dp_3</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <!--        <item name="android:paddingTop">@dimen/dp_10</item>-->
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
    </style>

    <style name="linearLayoutInsideCardViewInFragments">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="imageViewInsideLinearLayoutInSideCardViewInFragments">
        <item name="android:layout_width">@dimen/dp_48</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
    </style>

    <style name="relativeLayoutInHomeFragmentOuter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="recyclerViewInHomeFragmentOuter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:layout_marginStart">@dimen/dp_10</item>
        <item name="android:layout_marginEnd">@dimen/dp_10</item>
        <item name="android:layout_marginTop">@dimen/dp_15</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="textViewInsideLinearLayoutInSideCardViewInFragments">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:layout_marginBottom">@dimen/dp_5</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textViewSecurityLinesInFragments">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_7</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginTop">@dimen/dp_5</item>
        <!--        <item name="android:gravity">center</item>-->
        <!--        <item name="android:paddingBottom">@dimen/dp_5</item>-->
        <!--        <item name="android:layout_marginBottom">@dimen/dp_5</item>-->
        <!--        <item name="android:textColor">@color/black</item>-->
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="tabLayoutDesignOne">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/tab_style_grey</item>
    </style>

    <style name="tabLayoutDesignTwo">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/tab_style_grey</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:background">@drawable/tab_style_grey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">10dp</item></style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.OffersAndPromotionsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_10"
        android:padding="@dimen/dp_15"
        app:cardElevation="@dimen/dp_10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_margin="@dimen/dp_10"
            android:backgroundTint="@color/white"
            android:drawableStart="@drawable/arrow_back"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/offers_promotions"
            android:textSize="@dimen/sp_20" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:scaleType="fitXY"
            android:src="@drawable/discount_one_image" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_0"
        android:layout_marginEnd="@dimen/dp_5"
        android:elevation="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@color/white"
            android:padding="@dimen/dp_15">

            <TextView
                android:id="@+id/ivRefer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:text="@string/explore"
                android:textColor="@color/Red"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvReferLineFirst"
                style="@style/textViewSecurityLinesInFragments"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/ivRefer"
                android:text="@string/wfh10"
                android:textColor="@color/Red"
                android:textColorHint="@color/Red"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvReferLineSecond"
                style="@style/textViewSecurityLinesInFragments"
                android:layout_below="@+id/tvReferLineFirst"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/ivRefer"
                android:text="@string/get_10_off_every_month_on_a_minimum"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
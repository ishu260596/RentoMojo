<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:padding="@dimen/dp_10"
    android:elevation="@dimen/dp_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_5">

        <ImageView
            android:id="@+id/ivImageMP"
            android:layout_width="130dp"
            android:layout_height="@dimen/dp_80"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/cvConstraintLayout"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvItemNameMP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Magnum Chest of Drawers"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tvItemPriceMP"
            app:layout_constraintStart_toEndOf="@id/ivImageMP"
            app:layout_constraintTop_toTopOf="@id/ivImageMP" />

        <TextView
            android:id="@+id/tvItemPriceMP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:text="Starting from Rs 249"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_13"
            app:layout_constraintBottom_toBottomOf="@id/ivImageMP"
            app:layout_constraintStart_toEndOf="@id/ivImageMP"
            app:layout_constraintTop_toBottomOf="@id/tvItemNameMP" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
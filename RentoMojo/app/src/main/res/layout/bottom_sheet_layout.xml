<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llBottomConatainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_animation_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:fontFamily="sans-serif-black"
        android:padding="@dimen/dp_5"
        android:text="Verify phone number"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20" />

    <EditText
        android:id="@+id/etBottomPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:backgroundTint="@color/black"
        android:hint="Enter phone number"
        android:paddingStart="@dimen/dp_9"
        android:paddingBottom="@dimen/dp_30"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnBottomContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:background="@drawable/continue_btn_bg"
            android:fontFamily="sans-serif-black"
            android:padding="@dimen/dp_15"
            android:text="@string/Continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@drawable/bottom_dialog_bg" />
    </RelativeLayout>

</LinearLayout>



